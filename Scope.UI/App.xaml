<?xml version="1.0" encoding="utf-8"?>
<Application x:Class="Scope.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:Scope.UI" 
             xmlns:converter="clr-namespace:TMD.MVVM;assembly=TMD" 
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes\Generic.xaml" />
                <ResourceDictionary Source="Themes\ExpressionDark.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converter:InvertConverter x:Key="InvertConverter" />
            <converter:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />

        </ResourceDictionary>

    </Application.Resources>
</Application>
